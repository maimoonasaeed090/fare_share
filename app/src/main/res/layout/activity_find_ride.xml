<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FindRideActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54305a"
        android:elevation="6dp"
        app:titleTextColor="@color/white"
        app:title="Search for Ride"
        />
    <EditText
        android:id="@+id/search_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/start"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:fontFamily="@font/kavoon"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:hint="Choose Start location"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/search_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:fontFamily="@font/kavoon"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="Choose Destination"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/search_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:drawableStart="@drawable/date"
        android:drawablePadding="5dp"
        android:fontFamily="@font/kavoon"
        android:minHeight="48dp"
        android:hint="Enter Date"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/searchtime"
        android:drawableStart="@drawable/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:fontFamily="@font/kavoon"
        android:minHeight="48dp"
        android:hint="Enter Time"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/search_ride"
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#54305a"
        android:fontFamily="@font/kavoon"
        android:text="CREATE Ride"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

</LinearLayout>